

{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}

{% block main %}

<div class="panel panel-info">
    <div class="panel-heading">Posts</div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
            </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td><a href="{{ path('post', { slug: post.slug }) }}"> {{ post.title }}</a></td>
                        <td><a href="{{ path('post', { slug: post.slug }) }}"> {{ post.content[0:30] }}...</a></td>
                        <td>{{ post.author }}</td>
                    </tr>
                {% else %}
                    <tr><td>{{ 'No posts...' }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
     </div>
</div>
    <a class="btn btn-primary" href="{{ path('post_add') }}">New Post</a>

{% endblock %}

{% block javascripts %}
    <script>
        jQuery(document).ready(function() {
            $('.js-datepicker').datepicker();
        });
    </script>
{% endblock %}


